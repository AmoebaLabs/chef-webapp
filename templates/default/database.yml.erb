<%=app.environment%>:
  <%=YAML.dump(@db_conf)%>

<% if app[:postgresql] && app.postgresql[:nodes] %>
  <% app.postgresql[:nodes].each do |host| %>
    <% role = app.private_ip==host ? app.postgresql[:replication] : (app.postgresql[:replication]=='master' ? 'slave': 'master') %>
    <% @db_conf['host'] = host %>

<%="#{app.environment}_#{role}"%>:
  <%=YAML.dump(@db_conf)%>

  <% end %>
<% end %>
